<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crearusuarioactivity"
    tools:context=".CreateUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:gravity="bottom"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/email" />

            <EditText
                android:id="@+id/email"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:backgroundTint="#BE512B"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:hint="example@gmail.com"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textColor="#FF8C1E"
                android:textColorHighlight="#BE512B"
                android:textColorHint="#66FF8C1E"
                android:textColorLink="#BE512B" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pass" />

            <EditText
                android:id="@+id/contrasena"
                android:inputType="textPassword"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:backgroundTint="#BE512B"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:hint="***********"
                android:textAlignment="center"
                android:textColor="#FF8C1E"
                android:textColorHighlight="#BE512B"
                android:textColorHint="#66FF8C1E"
                android:textColorLink="#BE512B" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pass" />

            <EditText
                android:id="@+id/contrasenaconfirmacion"
                android:inputType="textPassword"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:backgroundTint="#BE512B"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:hint="Confirmar ****"
                android:textAlignment="center"
                android:textColorHighlight="#BE512B"
                android:textColor="#FF8C1E"
                android:textColorHint="#66FF8C1E"
                android:textColorLink="#BE512B" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/enviarEC"
                android:layout_width="264dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:textColor="#FFFFFF"
                android:text="Siguiente"
                app:cornerRadius="20dp"
                app:strokeColor="#BE512B"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>