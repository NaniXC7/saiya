<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iniciarsesionactivity"
    tools:context=".IniciarSesionActivity">

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="658dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="307dp"
            android:gravity="center_horizontal|top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="350dp"
                android:layout_height="97dp"
                app:srcCompat="@drawable/imageninicio" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/email" />

            <EditText
                android:id="@+id/correoa"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="#BE512B"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:hint="example@gmail.com"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textColor="#FF8C1E"
                android:textColorHighlight="#BE512B"
                android:textColorHint="#66FF8C1E"
                android:textColorLink="#BE512B" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pass" />

            <EditText
                android:id="@+id/contrasena"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:backgroundTint="#BE512B"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:hint="************"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColor="#FF8C1E"
                android:textColorHighlight="#BE512B"
                android:textColorHint="#66FF8C1E"
                android:textColorLink="#BE512B" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/IniciarSesion"
                android:layout_width="264dp"
                android:layout_height="60dp"
                android:fontFamily="sans-serif-black"
                android:text="Iniciar Sesion"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#BE512B"
                android:textColorHint="#BE512B"
                android:textColorLink="#BE512B"
                app:cornerRadius="20dp"
                app:iconTint="#BE512B"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.53"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contrasenainiciar"
                app:layout_constraintVertical_bias="0.19"
                app:strokeColor="#BE512B"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Registro"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="264dp"
                android:layout_height="60dp"
                android:fontFamily="sans-serif-black"
                android:onClick="crear"
                android:text="Registrarse"
                android:textColor="#FF8C1E"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.53"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IniciarSesionbtn"
                app:layout_constraintVertical_bias="0.0"
                app:strokeColor="#BE512B"
                app:strokeWidth="2dp" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>